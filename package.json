{
  "private": true,
  "name": "shoppinglist-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc -b app/tsconfig.json",
    "build": "run-s compile:i18n build:css build:remix",
    "clean": "rimraf ./node_modules/.cache ./build ./public/build \"./app/styles/**/*.css\"",
    "dev": "concurrently \"npm:watch:css\" \"npm:start:dev\"",
    "start": "remix-serve build",
    "start:dev": "remix run",
    "build:remix": "remix build",
    "migrate": "prisma migrate deploy",
    "ts-node": "ts-node --compiler-options '{\"module\":\"CommonJS\"}'",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:i18n": "run-s extract:i18n compile:i18n lint:fix",
    "extract:i18n": "formatjs extract 'app/**/*.ts*' --out-file app/lang/en-GB.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile:i18n": "formatjs compile app/lang/en-GB.json --ast --out-file app/lang/compiled/en-GB.json",
    "test": "run-s typecheck lint",
    "scalingo-postbuild": "run-s test build migrate",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.0",
    "@prisma/client": "2.23.0",
    "@reach/alert": "^0.15.0",
    "@reach/combobox": "^0.15.1",
    "@reach/dialog": "^0.15.0",
    "@reach/disclosure": "^0.15.0",
    "@reach/tooltip": "^0.15.0",
    "@remix-run/node": "0.17.3",
    "@remix-run/react": "0.17.3",
    "@remix-run/serve": "0.17.3",
    "@sentry/react": "^6.3.6",
    "@sentry/tracing": "^6.3.6",
    "@tanem/react-nprogress": "^3.0.66",
    "argon2": "^0.27.2",
    "fuse.js": "^6.4.6",
    "is-hotkey": "^0.2.0",
    "lru-cache": "^6.0.0",
    "luxon": "^1.26.0",
    "ms": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "prisma": "^2.22.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intl": "^5.17.5",
    "react-router-dom": "^6.0.0-beta.0",
    "react-spring": "^9.1.2",
    "react-use-clipboard": "^1.0.7",
    "react-use-gesture": "^9.1.3",
    "remix": "0.17.3",
    "resolve-accept-language": "^1.0.16",
    "use-debounce": "^6.0.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.2.12",
    "@remix-run/dev": "0.17.3",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "@types/is-hotkey": "^0.1.2",
    "@types/lru-cache": "^5.1.0",
    "@types/luxon": "^1.26.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^15.0.3",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "autoprefixer": "^10.2.5",
    "canvas": "^2.7.0",
    "concurrently": "^6.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-formatjs": "^2.15.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "sideEffects": false
}
